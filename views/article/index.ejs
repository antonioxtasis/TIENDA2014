<link href='http://fonts.googleapis.com/css?family=Source+Sans+Pro:400,600,700,400italic,600italic' rel='stylesheet' type='text/css'>
<link rel="stylesheet" type="text/css" href="/styles/pinterest.css">

<div class="container">
  <div class="align-center">
    <br><br>
    <a href="/article/new/" class="btn btn-info">Add new</a>
  </div>
</div>

<div id="wrapper">
  <div id="columns">
  <% _.each(articles, function(article) { %>
    <div class="pin" id="article_<%= article.id %>">
        <img src="<%= article.imageURL %>" alt="<%= article.imageURL %>">
        <h3><%= article.name %></h3>
        <p> Price: <b class="money">$<%= article.price %></b></p>
        <p>
          Lorem ipsum dolor sit amet, consectetur adipiscing elit. 
          Sed feugiat consectetur pellentesque. Nam ac elit risus, 
          ac blandit dui. Duis rutrum porta tortor ut convallis.
          Duis rutrum porta tortor ut convallis.
        </p>
        <a href="/article/show/<%= article.id %>" class="btn btn-sm btn-primary">Show</a>
        <a href="/article/edit/<%= article.id %>" class="btn btn-sm btn-warning">Edit</a>
        <form action="/article/destroy/<%= article.id %>" method="POST">
          <input type="hidden" name="_method" value="delete"/>
          <input type="submit" class="btn btn-sm btn-danger" value="Delete"/>
          <input type="hidden" name="_csrf" value="<%= _csrf %>" />
        </form>
      </div>
   <% }) %>
  </div>
</div>

<script>
  $.ajax({
    type:"GET",
    dataType: 'json',
    url:'/article/getProducts',
    data:{},
    success: function(data){
      for (var i=0;i<data.length;i++) { 
      console.log(data);
      $("#columns").append("<div class=pin id=article_"+data[i].id+"><img src="+data[i].imageURL+"></div>");
      }
    }
  });
</script>
