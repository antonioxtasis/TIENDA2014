<div class="container">
	<div id="main" class="col-md-8">
		<form enctype='multipart/form-data' action="/article/create" method="POST" id="form-sign" class="form-signin">
			<h2 class="form-signing-heading">New Article</h2>
			
			<input type="text" class="form-control" placeholder="name" name="name">
			<input type="text" class="form-control" placeholder="price" name="price">
			
			<label>Is Active?
			<select class="form-control" name="active">
				<option value="1">Yes</option>
				<option value="0">No</option>
			</select>
			</label>

			<input type="text" class="form-control" placeholder="quantity" name="quantity">
			<input type="text" class="form-control" placeholder="imageURL" value="/images/ropa.png" name="imageURL">
			<input type="file" class="form-control" name="imageURL2">
			<input type="text" class="form-control" placeholder="description" name="description">

			<br>
			<input type="submit" class="btn btn-lg btn-block btn-primary" Value="Add article"/>
			<input type="hidden" name="_csrf" value="<%= _csrf %>"/>
		</form>
	</div>
</div>