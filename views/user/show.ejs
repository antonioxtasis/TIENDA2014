<div class='container'>
	<div id="main" class="col-md-8">
		<h1>Hello <%= user.first_name %>!</h1>
		<% if (user.admin) { %>
			<img src="/images/admin.png">admin
		<% } else { %>
				<img src="/images/pawn.png">pawn
		<% } %>		
		<h3><%= user.title %> </h3>
		<hr>
		<h3>Email: <%= user.email %> </h3>
		
		<a class="btn btn-medium btn-primary" href="/user/edit/<%= user.id %>">Edit</a>
	</div>	
</div>